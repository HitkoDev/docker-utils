{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "./dist",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ]
    }
}
